<!DOCTYPE html>
<% subtitle = yield(:subtitle) %>
<% title = yield(:title) %>
<title>Billcrush<%= " â€“ #{subtitle}" if subtitle != '' %></title>
<%= stylesheet_link_tag 'main' %>
<div id=page>
  <div><h1><%= title.present?? title : "Billcrush" %></h1><h2><%= subtitle %></h2></div>
  <% if flash[:message].present? %>
    <div class="flash message">
        <%= flash[:message] %>
    </div>
  <% end %>
  <% if flash[:error].present? %>
    <div class="flash error">
        <%= flash[:error] %>
    </div>
  <% end %>
  <%= yield %>
</div>
