<div class=box>
  <h3>Create new group</h3>
  <%= form_for @group do |f| %>
    <p><%= f.label :name %>
    <p><%= f.text_field :name, :size => 20 %>
    <p><%= f.submit 'Create group', :style => 'margin-top:12px' %>
  <% end %>
  
 <p class=help>Need a random group name? Try:
    <strong><%= random_group_name %></strong>
 </p>
</div>
